<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RadioGroup
        android:id="@+id/rdg_selector"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/shape_editor_toobar_selector_bg"
        android:padding="4dp"
        android:layout_above="@+id/ll_toolbar"
        android:gravity="center"
        android:visibility="gone">
    </RadioGroup>

    <LinearLayout
        android:id="@+id/ll_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/editor_toolbar_bg"
        android:orientation="vertical"
        android:visibility="visible">

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/editor_toolbar_board" />

        <LinearLayout
            android:id="@+id/ll_btns"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_img"
                style="@style/editor_toolbar_btn"
                android:src="@mipmap/insert_image" />

            <ImageView
                android:id="@+id/iv_bold"
                style="@style/editor_toolbar_btn"
                android:src="@mipmap/bold" />

            <ImageView
                android:id="@+id/iv_italic"
                style="@style/editor_toolbar_btn"
                android:src="@mipmap/italic" />

            <ImageView
                android:id="@+id/iv_underline"
                style="@style/editor_toolbar_btn"
                android:src="@mipmap/underline" />

            <ImageView
                android:id="@+id/iv_txtsize"
                style="@style/editor_toolbar_btn"
                android:src="@mipmap/ic_txtsize" />

            <ImageView
                android:id="@+id/iv_txtcolor"
                style="@style/editor_toolbar_btn"
                android:src="@mipmap/ic_color" />

            <ImageView
                android:id="@+id/iv_bullets"
                style="@style/editor_toolbar_btn"
                android:src="@mipmap/bullets" />

            <ImageView
                android:id="@+id/iv_numbers"
                style="@style/editor_toolbar_btn"
                android:src="@mipmap/numbers" />

            <ImageView
                android:id="@+id/iv_link"
                style="@style/editor_toolbar_btn"
                android:src="@mipmap/insert_link" />

            <ImageView
                android:id="@+id/iv_video"
                style="@style/editor_toolbar_btn"
                android:src="@mipmap/insert_video" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>